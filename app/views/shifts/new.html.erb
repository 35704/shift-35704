<h1>シフト</h1>

<%= form_with(model: @shift, local: true) do |form| %>

  <div class="title">
    <%= form.label "シフト希望時間　" %>
    <%= form.text_field :title, placeholder:"例) 17-22"%>
  </div>

    <div class="time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label "備考欄　" %>
    <%= form.text_field :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>