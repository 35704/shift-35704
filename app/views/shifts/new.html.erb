<%= render "shared/header" %>

<%= form_with(model: @shift, class: 'registration-main', local: true) do |form| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      シフトの入力
    </h1>
  </div>
  <div class="title">
    <%= form.label "シフト希望時間　" %>
    <%= form.text_field :title, placeholder:"例) 17-22"%>
  </div>

    <div class="time">
    <%= form.label  "シフト希望日時" %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label "備考欄　" %>
    <%= form.text_area :content %>
  </div>


  <div class="submit">
    <%= form.submit "送信" %>
  </div>
</div>
<% end %>