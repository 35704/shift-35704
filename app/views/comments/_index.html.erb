<div class="shift__comments">
  <% if user_signed_in? %>
    <%= form_with model: @comment, url: comments_path, local: true do |f| %>
      <div class="field">
        <%= f.label :text, "コメント" %><br />
        <%= f.text_field :text, id:"comment_text", class: :"from_message" %>
      </div>
      <div class="actions">
        <%= f.submit "送信", class: :form__btn  %>
      </div>
    <% end %>
    <ul class="comments_lists">
      <% comment.each do |comment| %>
        <li class="comments_list">
          <%= comment.text %>
          <%= link_to comment.user.first_name,"#", class: :comment_user %>
        </li>
      <% end %>
    </ul>  
  <% end %>
</div>